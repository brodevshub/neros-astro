---
import ContactSection from "@components/ContactSection.astro";
import Reviews from "@components/reviews/Reviews";
import SendEmail from "@components/SendEmail";
import Sponsors from "@components/Sponsors.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title=" - Contacto">
    <h2 data-aos="fade-in" data-aos-duration="800">
        La opinión de nuestros clientes
    </h2>
    <Reviews apiKey={import.meta.env.GOOGLE_MAPS_API_KEY} client:visible />
    <h2 data-aos="fade-in" data-aos-duration="800">Contáctanos</h2>

    <ContactSection />
    <SendEmail client:visible />
    <Sponsors />
</Layout>

<style>
    h2 {
        text-align: center;
        padding-top: 50px;
        font-size: 50px;
        background: linear-gradient(90deg, var(--blueNeros), var(--pinkNeros));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
