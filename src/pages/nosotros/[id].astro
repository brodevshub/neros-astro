---
import Sponsors from "@components/Sponsors.astro";
import Return from "@icons/Return.astro";
import Layout from "@layouts/Layout.astro";
import { team } from "src/lib/team";

const { id } = Astro.params;
const member = team.find((member) => member.id === id);
---

<Layout title=`- ${member?.name}` description="Página de ${member?.name}">
    <a href="/nosotros" style=`color: ${member?.bgColor}`
        ><Return fill={member?.bgColor} />Nosotros</a
    >
    <div id="container">
        <picture>
            <img
                src={member?.img}
                alt=`Fotografía de ${member?.name}`
                transition:name=`img transition ${member?.id}`
            />
        </picture>
        <div>
            <h2 transition:name=`name transition ${member?.id}`>
                {member?.name}
            </h2>
            <h3 transition:name=`role transition ${member?.id}`>
                {member?.role}
            </h3>
            <p>{member?.description}</p>
        </div>
    </div>

    <Sponsors />
</Layout>

<style>
    #container {
        display: flex;
        gap: 25px;
        width: 800px;
        margin: 100px auto;
    }

    a {
        display: flex;
        position: absolute;
        top: 125px;
        margin-left: 50px;
        gap: 5px;
        text-decoration: none;

        &:hover {
            text-decoration: underline;
        }
    }

    #container div {
        width: 50%;
        display: flex;
        flex-direction: column;
    }

    picture {
        width: 50%;
        margin-right: 25px;
    }

    img {
        width: 100%;
        object-fit: cover;
    }

    h3 {
        font-size: 15px;
        color: var(--grayNeros);
    }

    p {
        margin-top: 50px;
        text-align: justify;
    }

    @media (max-width: 1024px) {
        #container {
            width: 100%;
            flex-direction: column;
            align-items: center;
            gap: 50px;
        }

        picture {
            margin-right: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        #container div {
            width: 80%;
        }
    }

    @media (max-width: 767px) {
        h2 {
            font-size: 18px;
        }
    }
</style>
