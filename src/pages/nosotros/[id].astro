---
import Return from "@icons/Return.astro";
import Layout from "@layouts/Layout.astro";
import { team } from "src/lib/team";

const { id } = Astro.params;
const member = team.find((member) => member.id === id);
---

<Layout title=`- ${member?.name}`>
    <a href="/nosotros" style=`color: ${member?.bgColor}`
        ><Return fill={member?.bgColor} />Nosotros</a
    >
    <div id="container">
        <picture>
            <img
                src={member?.img}
                alt=`FotografÃ­a de ${member?.name}`
                transition:name=`img transition ${member?.id}`
            />
        </picture>
        <div>
            <h2 transition:name=`name transition ${member?.id}`>
                {member?.name}
            </h2>
            <h3 transition:name=`role transition ${member?.id}`>
                {member?.role}
            </h3>
            <p>{member?.description}</p>
        </div>
    </div>
</Layout>

<style>
    #container {
        display: flex;
        justify-content: space-evenly;
        width: 800px;
        margin: 100px auto;
    }

    a {
        display: flex;
        position: absolute;
        top: 125px;
        margin-left: 50px;
        gap: 5px;
        text-decoration: none;

        &:hover {
            text-decoration: underline;
        }
    }

    #container div {
        width: 50%;
        display: flex;
        flex-direction: column;
    }

    picture {
        width: 50%;
        margin-right: 25px;
        height: 500px;
    }

    img {
        width: 100%;
        height: 500px;
        object-fit: cover;
    }

    h3 {
        font-size: 15px;
        color: var(--grayNeros);
    }

    p {
        margin-top: 50px;
        text-align: justify;
    }
</style>
