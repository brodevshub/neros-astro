<script>
    document.addEventListener("load", () => {
        document
            .getElementById("goToTopLink")
            .addEventListener("click", function (event) {
                event.preventDefault();
                window.scrollTo({
                    top: 0,
                    behavior: "smooth",
                });
            });
    });
</script>

<footer>
    <div id="footerData">
        <div id="info">
            <h4>Información</h4>
            <a href="">Avisos legales</a>
            <a href="">Protección de datos</a>
            <a href="">Política de privacidad</a>
            <a href="">Cookies</a>
        </div>

        <div id="goToTopLink">
            <!-- <a href="#">
                <span class="icon-arrow_upward"></span>
            </a> -->
            <a href="#">
                <Image
                    src="/media/logo.png"
                    alt="Logo Fisioterapia Neros"
                    width="150"
                    height="150"
                />
            </a>
        </div>

        <div id="contactData">
            <h4>Datos de Contacto</h4>
            <div>
                <span class="icon-mail2"></span>
                <span>eladelreves@gmail.com</span>
            </div>

            <div>
                <span class="icon-instagram"></span>
                <a href="https://www.instagram.com/eladelreves/">@eladelreves</a
                >
            </div>

            <div>
                <span class="icon-linkedin"></span>
                <span>/eladelreves/</span>
            </div>
        </div>
    </div>

    <span id="copyright"
        >Copyright 2024 © | Designed By <a href="">brodevs</a></span
    >
</footer>

<style>
    /*
    ----------------------------------------------------------------
        Footer styles
    ----------------------------------------------------------------
*/
    footer {
        background-color: #121212;
        color: white;

        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;

        height: 300px;
        padding: 25px 0;
        width: 100%;
    }

    footer a {
        color: white;
    }

    /*
    ----------------------------------------------------------------
        Footer first section (3 parts)
    ----------------------------------------------------------------
*/
    footer #footerData {
        display: flex;
        align-items: center;
        justify-content: space-around;
        flex-wrap: wrap;

        width: 100%;
    }

    footer #footerData > div,
    #footerData > a {
        font-size: 20px;

        display: flex;
        flex-direction: column;
    }

    footer #footerData > div:first-child,
    footer #footerData > div:last-child {
        width: 300px;
    }

    footer #footerData h4 {
        text-decoration: underline;
    }

    /*
    ----------------------------------------------------------------
        Legal Pages Div
    ----------------------------------------------------------------
*/
    #info a {
        color: #939393;
    }

    #info a:hover {
        color: white;
    }

    /*
    ----------------------------------------------------------------
        Img and Link to go top
    ----------------------------------------------------------------
*/
    #goToTopLink {
        align-items: center;
    }

    #goToTopLink span {
        border: 3px solid;
        border-radius: 50%;
        font-size: 30px;
        transition: all 0.5s;
        width: 35px;
    }

    #goToTopLink span:hover {
        color: var(--elaGreen);
    }

    /*
    ----------------------------------------------------------------
        Contact Data
    ----------------------------------------------------------------
*/
    #contactData h4 {
        text-align: right;
    }

    #contactData > div {
        display: flex;
        justify-content: right;
        align-items: center;
    }

    #contactData div span:first-child {
        margin-right: 10px;
    }

    /*
    ----------------------------------------------------------------
        Copyright line
    ----------------------------------------------------------------
*/
    #copyright {
        display: flex;
        justify-content: center;
        align-items: center;

        margin-top: 25px;
    }

    #copyright a {
        margin-left: 5px;
        text-decoration: underline;
    }
</style>
