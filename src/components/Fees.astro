---
import { fees } from "../lib/fees";
import Sponsors from "./Sponsors.astro";
---

<div id="container">
    <h2 data-aos="fade-in" data-aos-duration="800">Servicios</h2>
    <div id="catalogue">
        {
            fees.map((service) => (
                <div
                    class="cards"
                    data-aos="flip-right"
                    data-aos-duration="800"
                >
                    <img src={service.image} alt={service.title} />
                    <h3>{service.title}</h3>
                    <p>{service.description}</p>
                    <div>
                        <span>{service.price}</span>
                        <span>â‚¬</span>
                    </div>
                </div>
            ))
        }
    </div>
    <Sponsors />
</div>

<style>
    #container {
        background: linear-gradient(#7da4e3, #dd98fc);
    }

    h2 {
        text-align: center;
        padding-top: 100px;
        font-size: 50px;
        color: white;
        text-shadow:
            -1px -1px 0 #000,
            1px -1px 0 #000,
            -1px 1px 0 #000,
            1px 1px 0 #000;
    }

    #catalogue {
        width: 100%;
        min-height: 800px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
    }

    .cards {
        width: 350px;
        height: 450px;

        margin: 5%;
        padding: 10px 0;

        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;

        border: 1px solid black;
        background-color: white;
        box-shadow: 0px 10px 15px -5px rgba(0, 0, 0, 0.65);
        transition: transform 0.7s;
    }

    .cards:hover {
        transform: translateY(-10px);
    }

    .cards img {
        width: 80px;
        height: auto;

        margin-bottom: 25px;
    }

    .cards h3 {
        margin-bottom: 20px;

        font-size: 22px;
        font-weight: bold;
    }

    .cards p {
        width: 85%;
        min-height: 150px;
        margin-bottom: 20px;
        text-align: center;
    }

    .cards div {
        display: flex;
    }

    .cards div > span:first-child {
        font-size: 40px;
    }
</style>
