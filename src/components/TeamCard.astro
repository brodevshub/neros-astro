---
interface Props {
    id: string;
    img: string;
    name: string;
}

const { id, name, img } = Astro.props;
---

<a href=`/nosotros/${id}`>
    <picture>
        <img
            src={img}
            alt=`FotografÃ­a de ${name}`
            transition:name=`img transition ${id}`
        />
    </picture>
    <h2 transition:name=`title transition ${id}`>{name}</h2>
</a>

<style>
    a {
        position: relative;
        width: 350px;
        height: 500px;
        border: 6px solid;
        overflow: hidden;
        border-color: var(--grayNeros);
        cursor: pointer;
        color: black;
    }

    a:first-child {
        border-color: var(--blueNeros);
    }

    a:last-child {
        border-color: var(--pinkNeros);
    }

    a::after {
        content: "";
        width: 100%;
        height: 200px;
        position: absolute;
        left: 0;
        bottom: 0;
        background-image: linear-gradient(
            to top,
            var(--grayNeros),
            transparent
        );
    }

    a:first-child::after {
        background-image: linear-gradient(
            to top,
            var(--blueNeros),
            transparent
        );
    }

    a:last-child::after {
        background-image: linear-gradient(
            to top,
            var(--pinkNeros),
            transparent
        );
    }

    img {
        width: 100%;
        object-fit: cover;
        height: 500px;
    }

    h2 {
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: 10;
    }
</style>
